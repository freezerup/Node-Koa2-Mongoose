.container {
  height: 100%;
  background: #fafafa;
}
.user-wrap {
  height: 100%;
}
.header {
  position: relative;
  width: 100%;
  height: 360rpx;
  background: #ff5411;
  text-align: center;
}
.header > .bg {
  height: 100rpx;
  margin-top: 20rpx;
}
.header > .icon {
  position: absolute; 
  width: 160rpx;
  height: 160rpx;
  border-radius: 100%;
  border: 2px solid #fff;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%,-25%);
  transform: translate(-50%,-25%);
}
.section {
  background: #fafafa;
}
.tab {
  height: 100rpx; 
  line-height: 100rpx;
  margin-top: 30rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
}
.tab-name {
  flex: 1;
}
.tab-more {
  flex: 0 0 200rpx;
  text-align: right;
  color: #cdcdcd;
}
.tab>image {
  flex: 0 0 32rpx;
  height: 32rpx;
}