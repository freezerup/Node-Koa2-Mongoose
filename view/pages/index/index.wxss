/**index.wxss**/
.container {
  height: 100%;
  background-color: #F6F6F6;
}
.functions-lists {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.list {
  flex: 0 0 300rpx;
  height: 300rpx;
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.list >image {
  width: 100%;
  height: 100%;
}
.list >text {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #92969C;
}
